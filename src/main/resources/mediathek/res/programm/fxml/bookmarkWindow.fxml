                                <Label text="Keine Einträge vorhanden!" />
                            </placeholder>
                            <columns>
                                <TableColumn fx:id="colSender" editable="false" prefWidth="60" text="Sender" />
                                <TableColumn fx:id="colTheme" editable="false" prefWidth="200" text="Thema" />
                                <TableColumn fx:id="colTitle" editable="false" prefWidth="300" text="Titel" />
                                <TableColumn fx:id="colDuration" editable="false" prefWidth="60" text="Dauer" />
                                <TableColumn fx:id="colRunDate" editable="false" prefWidth="80" text="Sendedatum" />
                                <TableColumn fx:id="colBtnPlay" editable="false" prefWidth="25" sortable="false" text="" />
                                <TableColumn fx:id="colBtnDownload" editable="false" prefWidth="25" sortable="false" text="" />
                                <TableColumn fx:id="colUrl" editable="false" prefWidth="450" text="Url" />
                                <TableColumn fx:id="colExpiry" editable="false" prefWidth="80" text="Verfügbar bis" />
                                <TableColumn fx:id="colNote" editable="true" prefWidth="400" text="Notiz" />
                            </columns>
                        </TableView>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="pnLabel" minHeight="0.0" SplitPane.resizableWithParent="false">
                    <children>
                        <TextArea fx:id="taDescription" editable="false" prefHeight="60.0" wrapText="true" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                        <Hyperlink fx:id="hyperLink" onAction="#hyperLinkSelected" prefHeight="20.0" text="Link zur Webseite" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" />
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
        <HBox alignment="CENTER_LEFT" layoutX="0.0" layoutY="574.0" prefHeight="30.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="100.0">
            <children>
                <Label fx:id="lblCount" text="Label" />
                <Label fx:id="lblSeen" text="Label" />
                <Label fx:id="lblFilter" text="Label" />
                <Label fx:id="lblMessage" text="Label" />
            </children>
            <padding>
                <Insets left="10.0" />
            </padding>
        </HBox>
        <Button fx:id="btnClose" mnemonicParsing="false" onAction="#btnCloseWindow" text="Schließen" textAlignment="CENTER" AnchorPane.bottomAnchor="3.0" AnchorPane.rightAnchor="15.0" />
    </children>
</AnchorPane>
