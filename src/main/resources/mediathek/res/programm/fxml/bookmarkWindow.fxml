<AnchorPane fx:id="BookmarkListDialog" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="200" minWidth="200" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ToolBar prefHeight="40.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <Button fx:id="btnDeleteEntry" disable="true" mnemonicParsing="false" onAction="#btnDeleteEntry">
                    <tooltip>
                        <Tooltip text="Aus der Merkliste löschen" />
                    </tooltip>
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="MINUS" />
                    </graphic>
                </Button>
                <Button fx:id="btnMarkViewed" disable="true" mnemonicParsing="false" onAction="#btnMarkEntryAsViewed">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="EYE" />
                    </graphic>
                </Button>
                <Button fx:id="btnEditNote" disable="true" mnemonicParsing="false" onAction="#btnEditNote">
                    <tooltip>
                        <Tooltip text="Anmerkungen bearbeiten" />
                    </tooltip>
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="PENCIL" />
                    </graphic>
                </Button>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnSaveList" disable="true" mnemonicParsing="false" onAction="#btnSaveBookMarkList">
                    <tooltip>
                        <Tooltip text="Geänderte Merkliste abspeichern" />
                    </tooltip>
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="SAVE" />
                    </graphic>
                </Button>
                <Separator orientation="VERTICAL" />
                <ToggleButton fx:id="btnShowDetails" mnemonicParsing="false" onAction="#btnShowDetailsAction">
                    <tooltip>
                        <Tooltip text="Erweiterte Film Informationen anzeigen" />
                    </tooltip>
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="INFO_CIRCLE" />
                    </graphic>
                </ToggleButton>
                <Button fx:id="btnFilter" mnemonicParsing="false" onAction="#btnFilterAction">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="FILTER" />
                    </graphic>
                </Button>
            </items>
        </ToolBar>
        <SplitPane fx:id="spSplitPane" dividerPositions="0.75" orientation="VERTICAL" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
